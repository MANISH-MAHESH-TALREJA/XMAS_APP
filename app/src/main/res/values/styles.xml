<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar.Bridge">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="movie.listitem.title" parent="@android:style/Widget.TextView">
        <item name="android:textSize">@dimen/movieListTextSize</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/movieListTextColor</item>
    </style>

    <style name="mySpinnerStyle" parent="android:Widget.ListView.DropDown">
        <item name="android:divider">#c7c7c7</item>
        <item name="android:dividerHeight">10dp</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:itemBackground">#ffffff</item>
        <item name="android:textColorSecondary">@android:color/white</item>
        <item name="android:textColorPrimary">@android:color/white</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light">

    </style>

    <style name="NavigationDrawer" parent="AppTheme">
        <item name="android:textStyle">bold</item>
        <item name="android:textColorPrimary">@color/white</item>
    </style>

    <style name="Spinner" parent="AppTheme">
        <item name="colorAccent">@color/primary</item>
    </style>

    <style name="ThemeDialog" parent="@style/Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
    </style>

    <style name="NegativeButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">#00f</item>
    </style>

    <style name="PositiveButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">#f00</item>
    </style>

    <style name="PopupMenuLight" parent="ThemeOverlay.AppCompat.Light">
    </style>

    <style name="PopupMenuDark" parent="ThemeOverlay.AppCompat.Dark">
    </style>

    <style name="RemoveAppSplashTheme" parent="@style/AppTheme">
        <item name="android:windowIsTranslucent">true</item>
    </style>
</resources>
